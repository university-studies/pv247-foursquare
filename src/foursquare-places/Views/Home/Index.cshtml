@{
    ViewBag.Title = "Foursquare Places - PV247";
    Layout = "";
}


<!DOCTYPE html>
<html ng-app="FoursquarePlaces">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.16/angular-resource.min.js"></script>

    @Styles.Render("~/Content/css")

    <script type="text/javascript" src="./Scripts/site/foursquare-places.js"></script>
    <script type="text/javascript" src="./Scripts/site/Controllers/MapController.js"></script>
    <script type="text/javascript" src="./Scripts/site/Services/MapService.js"></script>

</head>
<body>
    <div class="container header-container">
        <div id="header">Foursquare Places</div>
    </div>

    <div class="container">
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>   

    <div class="container body-content">
        
        @*<map id="map-canvas"></map>*@
        
        <div locations-map></div>

        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PV247 FoursquarePlaces</p>
        </footer>
    </div>
    
</body>
</html>
