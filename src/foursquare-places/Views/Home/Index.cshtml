@{
    ViewBag.Title = "Foursquare Places - PV247";
    Layout = "";
}


<!DOCTYPE html>
<html ng-app="FoursquareModule">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

    <script type="text/javascript" src="http://google-maps-utility-library-v3.googlecode.com/svn/trunk/infobox/src/infobox.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.16/angular-resource.min.js"></script>

    @Scripts.Render("~/bundles/foursquare-module")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularUI")    
    @Styles.Render("~/Content/css")

</head>
<body ng-controller="AppController">
    <div class="container header-container">
        <div id="header">Foursquare Places</div>
    </div>

    <div class="container">
        <nav class="navbar navbar-inverse" role="navigation" ng-controller="NavbarController">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" ng-click="navCollapsed = !navCollapsed" ng-init="navCollapsed = true">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse" collapse="navCollapsed">
                    <ul class="nav navbar-nav">
                     @*   <li>@Html.ActionLink("About", "About", "Home")</li>*@
                        <li><a href="#"
                                ng-click="toggleCategory('Arts & Entertainment')"
                                ng-class="{ 'filter-on' : categories['Arts & Entertainment']}">Fun</a>
                        </li>
                        <li><a href="#" 
                               ng-click="toggleCategory('Restaurants')"
                               ng-class="{ 'filter-on' : categories['Restaurants']}">Food</a>
                        </li>
                        <li><a href="#"
                               ng-click="toggleCategory('School & Business')"
                               ng-class="{ 'filter-on' : categories['School & Business']}">Public</a>
                        </li>
                        <li><a href="#" 
                               ng-click="toggleCategory('Residence & Recreation')"
                               ng-class="{ 'filter-on' : categories['Residence & Recreation']}">Pasttime</a>
                        </li>
                        <li><a href="#" 
                               ng-click="toggleCategory('Travel & Transport')"
                               ng-class="{ 'filter-on' : categories['Travel & Transport']}">Travel</a>
                        </li>
                        <li><a href="#" 
                               ng-click="toggleCategory('Shop & Service')"
                               ng-class="{ 'filter-on' : categories['Shop & Service']}">Shop</a>
                        </li>                                               
                    </ul>
                </div>
            </div>
        </nav>
    </div>   

    <div class="container body-content">
        
            <div id="areaMap" map-directive class="body-content"></div>

            <div id="infobox-holder" class="infobox-wrapper"></div>
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PV247 FoursquarePlaces</p>
        </footer>
    </div>
    
</body>
</html>
