@{
    ViewBag.Title = "Foursquare Places - PV247";
    Layout = "";
}




<!DOCTYPE html>
<html ng-app="FoursquarePlaces" ng-controller="MapController">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/site")

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
    @Scripts.Render("~/bundles/places")
</head>
<body>
    <div class="container header-container">
        <div id="header">Foursquare Places</div>
    </div>

    <div class="container">
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>   

    <div class="container body-content">

        <div>{{ greeting }}</div>
        <div class="">
            <div id="map-wrapper" style="height: 100vh; width: 100%">
                <div id="map" style="height: 100%; width: 100%"></div>
            </div>
        </div>

        @Scripts.Render("~/bundles/map")
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PV247 FoursquarePlaces</p>
        </footer>
    </div>
    
</body>
</html>
